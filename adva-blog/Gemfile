source :rubygems

File.foreach(Dir[File.expand_path('../*.gemspec', __FILE__)].first) do |line|
  if line.match(/gem\.add_(development_)?dependency +'([^']+)'(, +'([^']+)')?/)
    args = $~.compact
    args << { :group => :test } if args.reject! { |match| match == 'development_'}
    gem *args
  end
end

gem 'simple_slugs', :path => '/Volumes/Users/sven/Development/projects/simple_slugs'