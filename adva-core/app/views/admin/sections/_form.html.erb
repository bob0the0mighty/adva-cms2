<%= form_for(resources) do |section| %>
  <%= section.label :title %>
  <%= section.text_field :title %>
  
  <%= section.label :type %>
  <%= section.select :type, section_types_for_select %>
  
  <%= section.fields_for(:article) do |article| %>
    <%= article.label :title, t('.heading_label') %>
    <%= article.text_field :title %>

    <%= article.label :body %>
    <%= article.text_area :body %>
  <% end %>
  
  <%= section.submit resource.new_record? ? 'Create' : 'Save' %>
<% end %>