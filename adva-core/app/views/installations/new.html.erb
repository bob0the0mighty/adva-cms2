<%= form_for(site, :url => installations_path) do |site| %>
  <%= hidden_field_tag :return_to, '/' %>

  <%= site.label :name %>
  <%= site.text_field :name %>

  <%= site.fields_for(:sections) do |sections| %>
    <%= sections.label :type %>
    <%= sections.select :type, section_types_for_select %>

    <%= sections.label :title, nil, :class => 'block' %>
    <%= sections.text_field :title %>
  <% end %>

  <%= site.submit 'Create' %>
<% end %>
