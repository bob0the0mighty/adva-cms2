<%= form_for(resource) do |site| %>

  <%= site.label :name %>
  <%= site.text_field :name %>
  
  <%= site.label :title %>
  <%= site.text_field :title %>
  
  <%= site.label :host %>
  <%= site.text_field :host %>

  <%= site.fields_for(:sections) do |sections| %>
    <%= sections.label :type %>
    <%= sections.select :type, section_types_for_select %>
  
    <%= sections.label :title, "Section title" %>
    <%= sections.text_field :title %>
  <% end %>
  
  <%= site.submit 'Create' %>
<% end %>